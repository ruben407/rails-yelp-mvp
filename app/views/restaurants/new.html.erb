<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <h1>New Restaurant</h1>
      <%= simple_form_for @restaurant do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :category %>
        <%= f.submit %>
        <% end %>
        <%= link_to 'Back', restaurants_path %>
    </div>
  </div>
</div>
